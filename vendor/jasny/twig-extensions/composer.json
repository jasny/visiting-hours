    "suggest": {
        "ext-intl": "Required for the use of the LocalDate Twig extension",
        "ext-pcre": "Required for the use of the PCRE Twig extension"
    },
    "autoload": {
        "psr-0": {
            "Jasny\\Twig": "src/"
        }
    }
