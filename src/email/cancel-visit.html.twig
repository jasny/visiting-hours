{% extends "email/base.html.twig" %}
{% import "email/base.html.twig" as my %}

{% block content %}
    <p {{ my.style }}>Hoi {{ info.parent_name }},</p>

    <p {{ my.style }}>
        {{ visit.name }} {{ visit.name|preg_match('/&|\\ben\\b/i') ? 'hebben' : 'heeft' }} heeft het bezoek op <strong>{{ visit.date|localdate('full') }}</strong> van <strong>{{ visit.time }}</strong>
        tot {{ visit.time_until }} afgezegd.
    </p>

    <p {{ my.style('14px', '20px 0 20px 0') }}>
        <a href="{{ info.link }}?manage={{ info.manage_token }}">&raquo; Beheer uw pagina</a>
    </p>

    <p {{ my.style }}>
        Met vriendelijke groet,<br>
        Aline &amp; Arnold<br>
        &dash; opkraambezoek.nl
    </p>
{% endblock %}
